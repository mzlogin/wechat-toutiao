<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Splash" parent="AppTheme">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="ArticleTitle">
        <item name="android:textColor">@color/article_title</item>
        <item name="android:textSize">@dimen/article_title_size</item>
        <item name="android:layout_marginBottom">@dimen/article_title_margin_bottom</item>
    </style>
</resources>
